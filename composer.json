{
    "name": "damcclean/package-bootstrapper",
    "description": "Allows developers to easilly bootstrap PHP, Laravel and Statamic packages.",
    "type": "project",
    "require": {
        "php": "^7.3",
        "friendsofphp/php-cs-fixer": "^2.16",
        "laravel-zero/framework": "^8.0",
        "nunomaduro/laravel-console-task": "^1.5"
    },
    "require-dev": {
        "mockery/mockery": "^1.4.2",
        "phpunit/phpunit": "^9.3"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "config": {
        "preferred-install": "dist",
        "sort-packages": true,
        "optimize-autoloader": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "bin": ["application"]
}
